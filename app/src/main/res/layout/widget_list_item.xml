<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/widget_step_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/ui_step_label"
        android:textSize="@dimen/text_size_medium"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/widget_step_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_medium"
        tools:text="1"
        android:textSize="@dimen/text_size_medium"
        android:layout_toRightOf="@id/widget_step_label" />

    <ImageButton
        android:id="@+id/widget_step_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_forward_12dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_alignParentRight="true" />
</RelativeLayout>
