<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.StepDetailActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/previous_step_button"/>

    <Button
        android:id="@+id/previous_step_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ui_previous_step_label"
        android:backgroundTint="@android:color/white"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@android:color/holo_blue_light"
        app:layout_constraintRight_toLeftOf="@id/view_divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/next_step_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/next_step_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ui_next_step_label"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/holo_blue_light"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintLeft_toRightOf="@id/view_divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>